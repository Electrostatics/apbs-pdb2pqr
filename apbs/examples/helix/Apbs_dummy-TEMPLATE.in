# READ IN MOLECULES
read
# Read molecule 1
	mol pqr TM.pqr 
end

# FOCUSED POTENTIAL FOR SOLVATED1 STATE
elec name solvated1
	mg-dummy
	dime DIME DIME DIME 
	nlev 4
	glen GLEN_L GLEN_L GLEN_L 
	gcent mol 1
	mol 1
	lpbe
	bcfl zero
	ion  
	charge 1  
	conc 0.100 
	radius 2.0 
	ion  
	charge -1  
	conc 0.100 
	radius 2.0
	pdie PDIE
	sdie SDIE 
	chgm spl2
	srfm mol
	srad 1.4
	swin 0.3
	sdens 10.0
	temp 298.15
	calcenergy total
	calcforce no
	write dielx dx dielx_L		   # spatially dependent diel. constant
	write diely dx diely_L		   # out using the Conoly/Molecular surfac
	write dielz dx dielz_L
	write kappa dx kappa_L		   # write out the kappa map
	write charge dx charge_L		 # write out the charge map
end

